# API Configuration
VITE_API_BASE_URL=https://api.airbear.me
VITE_ENV=production

# Frontend URLs
VITE_APP_URL=https://airbear.me
VITE_WS_URL=wss://api.airbear.me

# Authentication
VITE_JWT_SECRET=your_jwt_secret_production

# Stripe
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_prod

# Map Services
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_prod

# Analytics (optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=your_sentry_dsn_prod

# Backend Configuration (for server)
NODE_ENV=production
PORT=3000
DATABASE_URL=your_neon_production_connection_string
STRIPE_SECRET_KEY=your_stripe_secret_key_prod
JWT_SECRET=your_jwt_secret_prod
CLIENT_URL=https://airbear.me
ALLOWED_ORIGINS=https://airbear.me,https://www.airbear.me

# Database (if using Neon/PostgreSQL directly)
PGHOST=your-neon-production-host
PGDATABASE=airbear_prod
PGUSER=airbear_prod_user
PGPASSWORD=your_secure_password_prod
PGPORT=5432

# CORS Configuration
CORS_ORIGINS=https://airbear.me,https://www.airbear.me

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGING=false

# Security
VITE_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https://*.stripe.com; connect-src 'self' https://api.airbear.me wss://api.airbear.me https://*.stripe.com;
